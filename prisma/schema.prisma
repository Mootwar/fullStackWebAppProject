generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id Int @id @default(autoincrement())
  title String
  done Boolean @default(false)
  createdAt DateTime @default(now())
}

model Product {
  id          Int @id @default(autoincrement())
  title       String
  description String
  price       Float
  stock       Int @default(0)
  imageUrl    String
  createdAt   DateTime @default(now())
}

model User {
  id       Int @id @default(autoincrement())
  email    String @unique
  password String
  role     Role @default(CUSTOMER)
  orders   Order[]
}

enum Role {
  ADMIN
  CUSTOMER
}

model Order {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  products Product[]
  total Float
  status OrderStatus @default(PENDING)
  createdAt DateTime @default(now())
}